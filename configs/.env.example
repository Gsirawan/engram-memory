# =============================================================================
# ENGRAM CONFIGURATION
# =============================================================================
# Copy this to .env and fill in your Anthropic API key.
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration (for entity extraction during ingestion)
# -----------------------------------------------------------------------------
LLM_BINDING=openai
LLM_BINDING_HOST=https://api.anthropic.com/v1/
LLM_BINDING_API_KEY=your-anthropic-api-key-here
LLM_MODEL=claude-3-5-haiku-20241022

# Also set for tools that read the standard var
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# -----------------------------------------------------------------------------
# Embedding Configuration (Ollama â€” runs locally, free)
# -----------------------------------------------------------------------------
EMBEDDING_BINDING=ollama
EMBEDDING_BINDING_HOST=http://localhost:11434
EMBEDDING_MODEL=qwen3-embedding:0.6b
EMBEDDING_DIM=1024

OLLAMA_PORT=11434

# -----------------------------------------------------------------------------
# LightRAG Configuration
# -----------------------------------------------------------------------------
LIGHTRAG_MAX_TOKENS=2048
LIGHTRAG_PORT=9621
